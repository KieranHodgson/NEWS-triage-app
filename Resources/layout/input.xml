
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="9"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,0,r">
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewID"
        android:layout_columnSpan="4"
        android:layout_width="match_parent"
        android:textStyle="normal"
        android:layout_margin="10dp"/>
    <TextView
        android:text="SpO2"
        android:id="@+id/TextviewSpO2"
        android:layout_columnWeight="2"
        android:layout_rowWeight="1"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnSpan="1"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp" />
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/radioGroupSpo2"
        android:layout_gravity="center_vertical"
        android:layout_columnSpan="2"
        android:layout_marginRight="35dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Sp02 scale 1"
            android:id="@+id/RadioSpo2_1"
            android:layout_columnSpan="1"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sp02 scale 2"
            android:id="@+id/RadioSpo2_2"
            android:layout_columnSpan="1"/>
    </RadioGroup>

    <EditText
        android:inputType="number"
        android:id="@+id/TextEditSpo2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:width="100dp"
        android:text="99"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        android:gravity="center"/>
    <TextView
        android:text="Pulse"
        android:id="@+id/textViewPulse"
        android:layout_columnWeight="3"
        android:layout_rowWeight="1"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp" />
    <EditText
        android:inputType="number"
        android:id="@+id/TextEditPulse"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:text="60"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        android:gravity="center"/>
    <TextView
        android:text="Blood pressure"
        android:id="@+id/textViewBP"
        android:layout_columnWeight="3"
        android:layout_rowWeight="1"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp" />
    <EditText
        android:inputType="number"
        android:id="@+id/TextEditBP"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:text="120"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        android:gravity="center"/>
    <TextView
        android:text="Tempereture"
        android:id="@+id/textViewTempereture"
        android:layout_columnWeight="3"
        android:layout_rowWeight="1"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp" />
    <EditText
        android:inputType="none|numberDecimal"
        android:id="@+id/TextEditTempereture"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:text="37.5"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        android:gravity="center"/>
    <TextView
        android:text="Respiration rate"
        android:id="@+id/textViewRespiration"
        android:layout_columnWeight="3"
        android:layout_rowWeight="1"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp" />
    <EditText
        android:inputType="number"
        android:id="@+id/TextEditRespiration"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxWidth="50dp"
        android:text="15"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        android:gravity="center"/>

    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/radioGroupAir"
        android:orientation="horizontal"
        android:layout_columnSpan="4"
        android:layout_gravity="center">
        <RadioButton
            android:text="Air"
            android:id="@+id/RadioAir_Air"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:textSize="20dp"
            android:checked="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_width="wrap_content"/>
        <RadioButton
            android:text="Oxygen"
            android:id="@+id/RadioAir_Oxygen"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="right" />
    </RadioGroup>



    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/radioGroupConsciousness"
        android:layout_columnSpan="4"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <RadioButton
            android:text="Alert"
            android:id="@+id/RadioAlert_Alert"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:textSize="20dp"
            android:checked="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <RadioButton
            android:text="CVPU"
            android:id="@+id/RadioAlert_CVPU"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </RadioGroup>



    <Button
        android:text="@android:string/cancel"
        android:id="@+id/buttonCancel"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="start"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="15dp" />

    <Button
        android:text="Refresh"
        android:id="@+id/buttonRefresh"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="100dp"/>

    <Button
        android:text="submit"
        android:id="@+id/buttonSubmit"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="SubmitClicked"
        android:ellipsize="start"
        android:layout_marginBottom="100dp" />




</GridLayout>